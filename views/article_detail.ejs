<!DOCTYPE html>
<html>
<head>
    <title><%= article.title %></title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div class="line-b">
    <header>
        <h1 class="wf-osw fnw-b blog_title">kemulog</h1>
        <nav class="menu">
            <ul class="clear-fix">
                <li class="f-l menu-tab cl-a-mid"><a class="disp-bl" href="/">home</a></li>
                <li class="f-l menu-tab cl-a-mid"><a class="disp-bl" href="/about">about</a></li>
                <li class="f-r menu-tab menu-tab-login cl-b-mid"><a class="disp-bl" href="/login">ログイン</a></li>
            </ul>
        </nav>
    </header>
</div>
<div class="clear-fix wrapper">
    <article class="f-l content">
        <h2 class="article1-head mb20 cl-a-base"><%= article.title %></h2>
        <ul class="clear-fix line-t line-b lh30">
            <% if(article.postTime != undefined){ %>
            <li class="f-l">
                <p class="cl-b-sm"><i class="fa fa-clock-o mr3 cl-b-vsm"></i><%= article.postTime%></p>
            </li>
            <% } %>
            <% if(article.tags != undefined){ %>
            <li class="f-l">
                <p class="cl-a-sm"><i class="fa fa-tags mr3 cl-a-vsm"></i><%= article.tags %></p>
            </li>
            <% } %>
        </ul>
        <p class="article1-content mt10"><%- article.content %></p>
    </article>
    <aside class="f-r content-sub">
        
    </aside>
</div>
</body>
</html>